@{
    ViewBag.Title = "Facultes";
}
<h2>Факультеты (@Model.Count):</h2>
<body>
    <table id="main-table">
        <thead>
            <tr>
                <th>Факультет</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@Model[i].Name</td>
                        <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                            @Html.ActionLink("Подробнее", "Specialitis", new { faculty_id = Model[i].id })
                        </td>
                        <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                            @Html.ActionLink("Редактировать", "EditFaculty", new { id = Model[i].id })
                        </td>
                        <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                            @Html.ActionLink("Удалить", "DeleteFaculty", new { id = Model[i].id })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div>
        <button class="clicable btn btn-default" onclick="this.getElementsByTagName('a')[0].click()">@Html.ActionLink("Добавить", "AddFaculty")</button>
    </div>
    <script type="text/javascript">document.onload=new function () {
            $('#main-table').DataTable(russian_lang);
        };</script>
</body>
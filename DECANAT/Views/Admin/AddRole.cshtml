@model DECANAT.ModelData.NewUserRole

@{
    ViewBag.Title = "AddRole";
}

<h2>Добавление роли</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Роли пользователя @Model.username (@Model.email)</h4>
        <div class="form-group">
            @Html.LabelFor(model => model.new_role, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => Model.new_role, Model.roles_list, "Выберите роль...",
        new { @class = "form-control" })
            </div>
        </div>
        @Html.ValidationSummary()
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Назначить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад", "Roles", new { id = Model.id })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model List<DECANAT.ModelData.Subgroup>
@{
    ViewBag.Title = "Subgroups";
}
<h3>Факультет: @ViewBag.faculty</h3>
<h4>Специальность: @ViewBag.speciality_name (@ViewBag.speciality_number)</h4>
<h4>Курс-группа: @ViewBag.coors-@ViewBag.group_number</h4>
<h4>Подгрупп (@Model.Count):</h4>
<body>
    <table id="main-table">
        <thead>
            <tr>
                <th>Подгруппа</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@Model[i].subgroup_number</td>
                        <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                            @Html.ActionLink("Подробнее(" + @Model[i].peoples_count + ")", "Students", new { subgroup_id = Model[i].id })
                        </td>
                        <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                            @Html.ActionLink("Редактирование нагрузки", "Works", new { subgroup_id = Model[i].id })
                        </td>
                        <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                            @Html.ActionLink("Удалить", "DeleteSubgroup", new {id=Model[i].id})
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div>
        <button class="clicable btn btn-default" onclick="this.getElementsByTagName('a')[0].click()">
            @Html.ActionLink("Добавить", "AddSubgroup", new { group_id = ViewBag.group_id })
        </button>
    </div>
    <br />
    @Html.ActionLink("Назад", "Groups", new { speciality_id = ViewBag.speciality_id })
    <script type="text/javascript">
            document.onload = new function () {
                $('#main-table').DataTable(russian_lang);
            };
    </script>
</body>



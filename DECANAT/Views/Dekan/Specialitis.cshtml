@model List<DECANAT.ModelData.Speciality>
@{
    ViewBag.Title = "Specialitis";
}
<br />
<h3>Специальности @ViewBag.faculty_name (@Model.Count):</h3>
<body>
    <table id="main-table">
        <thead>
            <tr>
                <th>Специальность</th>
                <th>Группы</th>
            </tr>
        </thead>
        <tbody>
            @{
                for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@Model[i].speciality_name (@Model[i].speciality_number)</td>
                        <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                            @Html.ActionLink("Подробнее", "Groups", new { speciality_id = Model[i].id })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div>
        @Html.ActionLink("Назад", "Facultes")
    </div>
    <script type="text/javascript">
        document.onload = new function () {
            $('#main-table').DataTable(russian_lang);
        };
    </script>
</body>

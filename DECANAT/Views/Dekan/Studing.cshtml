@model List< DECANAT.ModelData.Study>
@{
    ViewBag.Title = "Studing";
}

<h3>Факультет: @ViewBag.faculty_name</h3>
<h4>Специальность: @ViewBag.speciality_name (@ViewBag.speciality_number)</h4>
<h4>Группа-Курс: @ViewBag.group_number-@ViewBag.coors</h4>
<body>
    <table id="main-table">
        <thead>
            <tr>
                <th>ФИО</th>
                <th>Лабораторных</th>
                <th>Сдано</th>
                <th>Не сдано</th>
                <th>Процент</th>
                <th>Дисциплины</th>
            </tr>
        </thead>
        <tbody>
            @{
                for (int i = 0; i < Model.Count; i++)
                {
            <tr>
                <td>@Model[i].student_name</td>
                <td>@Model[i].all_labs</td>
                <td>@Model[i].complited</td>
                <td>@Model[i].not_complited</td>
                <td>@Model[i].procent</td>
                <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                    @Html.ActionLink("Подробнее", "DisciplineStuding", new { student_id = Model[i].student_id })
                </td>
            </tr>
                }
            }
        </tbody>
    </table>
    @Html.ActionLink("Назад", "Groups", new { speciality_id = ViewBag.speciality_id })
    <script type="text/javascript">
        document.onload = new function () {
            $('#main-table').DataTable(russian_lang);
        };
    </script>
</body>



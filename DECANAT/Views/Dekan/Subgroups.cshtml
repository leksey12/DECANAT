@model List<DECANAT.ModelData.Subgroup>
    @{
        ViewBag.Title = "Subgroups";
    }
    <br />
    <h3>Факультет: @ViewBag.faculty</h3>
    <h4>Специальность: @ViewBag.speciality_name (@ViewBag.speciality_number)</h4>
    <h4>Групп (@Model.Count):</h4>
    <body>
        <table id="main-table">
            <thead>
                <tr>
                    <th>Курс-Группа-подгруппа</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@Model[i].coors-@Model[i].group_number-@Model[i].subgroup_number</td>
                            <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                                @Html.ActionLink("Успеваемость", "Studing", new { subgroup_id = Model[i].id, speciality_id = Model[i].speciality_id })
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        @Html.ActionLink("Назад", "Specialitis", new { faculty_id = ViewBag.faculty_id })
        <script type="text/javascript">
            document.onload = new function () {
                $('#main-table').DataTable(russian_lang);
            };
        </script>
    </body>
